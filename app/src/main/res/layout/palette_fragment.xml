<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/normal_text_not_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorEntryText"
        android:background="@color/colorWhiteSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/incorrect_not_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorMarkedIncorrect"
        android:background="@color/colorWhiteSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/normal_text_not_highlighted"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/revealed_not_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorRevealed"
        android:background="@color/colorWhiteSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/incorrect_not_highlighted"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/normal_text_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorEntryText"
        android:background="@color/colorHighlightedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_text_not_highlighted" />

    <TextView
        android:id="@+id/incorrect_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorMarkedIncorrect"
        android:background="@color/colorHighlightedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/normal_text_highlighted"
        app:layout_constraintTop_toBottomOf="@id/normal_text_not_highlighted" />

    <TextView
        android:id="@+id/revealed_highlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorRevealed"
        android:background="@color/colorHighlightedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/incorrect_not_highlighted"
        app:layout_constraintTop_toBottomOf="@id/normal_text_not_highlighted" />

    <TextView
        android:id="@+id/normal_text_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorEntryText"
        android:background="@color/colorSelectedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_text_highlighted" />

    <TextView
        android:id="@+id/incorrect_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorMarkedIncorrect"
        android:background="@color/colorSelectedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/normal_text_highlighted"
        app:layout_constraintTop_toBottomOf="@id/normal_text_highlighted" />

    <TextView
        android:id="@+id/revealed_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/colorRevealed"
        android:background="@color/colorSelectedSquare"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/incorrect_not_highlighted"
        app:layout_constraintTop_toBottomOf="@id/normal_text_highlighted" />




</androidx.constraintlayout.widget.ConstraintLayout>